<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <import type="android.graphics.drawable.Drawable"/>
        <import type="com.ayponyo.android.meteo.Util"/>
        <variable name="city" type="com.ayponyo.android.meteo.models.City"/>
        <variable name="city2" type="com.ayponyo.android.meteo.models.City"/>
        <variable name="imagefr" type="Drawable"/>
        <variable name="imageno" type="Drawable"/>
    </data>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorSecondary"
    >
    <TextView
        android:id="@+id/text_view_error_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/button_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/favorites"
        android:layout_margin="@dimen/button_margin"
        />
    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/orange"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/text_view_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"/>
            <TextView
                android:id="@+id/text_view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_desc"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/city_desc_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_view"
                android:contentDescription="@string/city_desc"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/weather_sunny_white"
                />

            <TextView
                android:id="@+id/text_view_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_temp"
                android:layout_gravity="center"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/temp_size"/>
        </LinearLayout>

    </LinearLayout>
    <!-- TEST DATA BINDING   -->
    <LinearLayout
        android:id="@+id/linear_layout_city"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="200dp"
        android:layout_below="@+id/linear_layout_main"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@{ city.mCountry.length() > 0 &amp;&amp; city.mCountry.equals(`FR`) ? imagefr : imageno  }"
            />
        <TextView android:layout_width="match_parent"
            android:id="@+id/test"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/city_desc_size"

            android:text="@{city.mName}"
            />
        </LinearLayout>


        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/city_desc_size"

            android:visibility="@{city.mDescription.length() > 0 ? View.VISIBLE : View.GONE}"
            android:text="@{Util.capitalize(city.mDescription)}"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_city2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linear_layout_city"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:src="@{ city2.mCountry.length() > 0 &amp;&amp; city2.mCountry.equals(`FR`) ? imagefr : imageno  }"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textSize="@dimen/city_desc_size"

                android:text="@{city2.mName}"
                />
        </LinearLayout>


        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/city_desc_size"

            android:visibility="@{city2.mDescription.length() > 0 ? View.VISIBLE : View.GONE}"
            android:text="@{Util.capitalize(city2.mDescription)}"
            />



    </LinearLayout>
    <!--<ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="Widget.ProgressBar.Large"
        />-->
    <!--<com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_input_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="@string/input_message"/>-->
</RelativeLayout>
</layout>